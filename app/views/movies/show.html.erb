<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Length:</strong>
  <%= @movie.length %> minutes
</p>

<p>
  <strong>Directors:</strong>
  <%= @movie.directors %>
</p>

<p>
  <strong>Actors:</strong>
  <%= @movie.actors %>
</p>

<p>
  <strong>Category:</strong>
  <%= @movie.category %>
</p>

<p>
  <% if @movie.image.attached? %>
    <%= image_tag @movie.image %>
  <% end %>
</p>

<p>Review Form</p>
  <%= form_with(model: @movie_review, local: true) do |form| %>
    <div class= "field">
      <%= form.text_area :review %>
      <%= form.hidden_field :movie_id, :value => @movie.id %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  <% end %>
  <br>
  
  <p>Review List</p>
   <ul>
     <% @movie.movie_review.each do |movie_review|%>
       <li><%= movie_review.review %>
     (<i><%= movie_review.user.name if movie_review.user%></i>)</li>
     <% end %>
   </ul>


  
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %> 
